{
  "name": "nexans_web",
  "version": "1.0.0",
  "author": {
    "name": "Joseph Anane"
  },
  "description": "An app",
  "private": true,
  "build": {
    "files": [
      "./dist/**/*",
      "./pages/**/*",
      "./node_modules/**/*"
    ],
    "appId": "com.ibitsoft.nexans-onprem",
    "asar": false
  },
  "scripts": {
    "start": "APP_ROOT=src/renderer umi dev",
    "dev:main": "ESLINT=none BROWSER=none COMPRESS=none roadhog build -w",
    "dev:renderer": "ESLINT=none APP_ROOT=src/renderer BROWSER=none umi dev",
    "dev": "run-p dev:renderer dev:main",
    "build:renderer": "ESLINT=none APP_ROOT=src/renderer umi build",
    "build:main": "ESLINT=none roadhog build",
    "build": "yarn build:main && yarn build:renderer",
    "pack": "yarn build && yarn rebuild && build",
    "pack:dir": "yarn build && yarn rebuild && build --dir",
    "pack:dirOnly": "build --dir",
    "rebuild": "electron-rebuild -m ./app",
    "test": "APP_ROOT=src/renderer umi test",
    "lint": "eslint --ext .js src app mock tests",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "electron-config": "^2.0.0",
    "electron-is": "^3.0.0",
    "electron-log": "^2.2.17"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "babel-eslint": "^9.0.0",
    "concurrently": "^4.1.0",
    "dva": "^2.5.0-beta.2",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "electron-dev": "^1.0.1",
    "electron-rebuild": "^1.8.2",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "roadhog": "^2.4.9",
    "umi": "^2.4.2",
    "umi-plugin-react": "^1.4.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
